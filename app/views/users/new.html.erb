<div class="form-title">
<h1>User Registration Form</h1>
</div>
<br>
<br>
<div class=".div-registration">
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
    <%= f.submit %>
<% end %>
</div>
